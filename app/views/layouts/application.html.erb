<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/78331e1d1c.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <p id="notice"><%= notice %></p>
    </div>
    <br >
    <br >
    <br >
        <div class="container">
         <% if user_signed_in? %>
           <div class="search-form">
             <%= form_with url:search_path, method: :get, local:true do |f| %>
              <%= f.text_field 'search[value]' %>
              <%= f.select 'search[model]', options_for_select({"User" => "user","Book" => "book"}) %>
              <%= f.select 'search[how]', options_for_select({"完全一致" => "match","前方一致" => "forward", "後方一致" => "backward","部分一致" => "partical"}) %>
              <%= f.submit :'検索' %>
           <% end %>
           </div>
        <% end %>
      </div>

    <%= yield %>
  </body>
</html>
